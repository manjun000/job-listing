<h1>Categories</h1>

<table class="table table-boldered">
<thead>
	<tr>
  	<th>Name</th>
  	<th colspan="2"></th>
	</tr>
</thead>

<tbody>
	<% @categories.each do |category| %>
  	<tr>
    	<td><%= category.name %></td>
    	<td><%= link_to '编辑', edit_admin_category_path(category) %></td>
    	<td><%= link_to '删除', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  	</tr>
	<% end %>
</tbody>
</table>

<br>

<button><%= link_to 'New Category', new_admin_category_path %></button>
