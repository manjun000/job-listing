<h1> Edit a job </h1>

<%= simple_form_for [:admin, @job ] do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :city%>
<%= f.input :company%>
<%= f.input :wage_lower_bound, :lable => "薪资下限" %>
<%= f.input :wage_upper_bound, :lable => "薪资上限" %>
<%= f.input :contact_email %>
<%= select_tag(:category_id, options_for_select(@categories), :prompt => "类别") %>
<%= f.input :is_hidden %>

 <%= f.submit "Submit" %>
 <% end %>
